{
  "name": "e-commerce",
  "private": true,
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "fmt": "oxfmt -c .oxfmtrc.json ",
    "fmt:check": "oxfmt --check -c .oxfmtrc.json",
    "lint": "oxlint -c .oxlintrc.json --deny-warnings --type-aware --type-check --report-unused-disable-directives",
    "lint:fix": "oxlint --fix -c .oxlintrc.json"
  },
  "devDependencies": {
    "oxfmt": "0.26.0",
    "oxlint": "1.41.0",
    "oxlint-tsgolint": "0.11.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,astro}": "bun run lint",
    "*": "oxfmt --no-error-on-unmatched-pattern"
  }
}
